<h1>
    <%= title %>
</h1>

<!-- Flash / error message -->
<% if (messages) { %>
    <%= messages() %>
        <% } %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

    <!-- Login Form -->
    <form method="post" action="/account/login" class="auth-form">
        <label for="account_email">Email Address</label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">

        <label for="accountPassword">Password:</label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
            character</span>
        <input type="password" name="account_password" id="accountPassword" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

        <button type="submit" class="btn-primary">Log In</button>
    </form>

    <p class="register-link">
        Don't have an account? <a href="/account/register">Register here</a>.
    </p>