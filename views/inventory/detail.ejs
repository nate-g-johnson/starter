<%# Vehicle Detail Page %>

    <h1 class="page-title">
        <%= title %>
    </h1>

    <section id="vehicle-detail">
        <figure class="vehicle-image">
            <img src="<%= vehicle.inv_image %>" alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %>" />
        </figure>

        <div class="vehicle-info">
            <p><strong>Year:</strong>
                <%= vehicle.inv_year %>
            </p>
            <p><strong>Make:</strong>
                <%= vehicle.inv_make %>
            </p>
            <p><strong>Model:</strong>
                <%= vehicle.inv_model %>
            </p>
            <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %>
            </p>
            <p><strong>Mileage:</strong>
                <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %> miles
            </p>
            <p><strong>Color:</strong>
                <%= vehicle.inv_color %>
            </p>
            <p><strong>Description:</strong>
                <%= vehicle.inv_description %>
            </p>
        </div>

        <!--Favorites Button-->
        <div class="favorite-actions">
            <% if (loggedin) { %>
                <% if (isFavorited) { %>
                    <form method="post" action="/account/favorites/remove/<%= vehicle.inv_id %>" class="favorite-form">
                        <button type="submit" class="fav-btn remove">★ Remove Favorite</button>
                    </form>
                <% } else { %>
                    <form method="post" action="/account/favorites/add/<%= vehicle.inv_id %>" class="favorite-form">
                        <button type="submit" class="fav-btn add">☆ Add to Favorites</button>
                    </form>
                <% } %>
            <% } else { %>
                <p><a href="/account/login">Log in</a> to add this vehicle to your favorites.</p>
            <% } %>
        </div>
        <!--End of Favorites Button Section -->

    </section>